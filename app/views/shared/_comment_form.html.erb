<%= semantic_form_for @comment do |form| %>
   <%= form.inputs do %>
     <%= form.input :name %>
     <%= form.input :email %>
     <%= form.input :body %>
     <%= form.input :iso_countries, :as => :select, :include_blank => '-- None in particular --', :label => 'Related countries' %>
   <% end %>
   <%= form.buttons do %>
     <%= form.commit_button %>
   <% end %>
<% end %>
